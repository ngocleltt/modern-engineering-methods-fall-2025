@prefix : <http://www.semanticweb.org/ngocleltt/ontologies/2025/9/family-task2/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@base <http://www.semanticweb.org/ngocleltt/ontologies/2025/9/family-task2/> .

<http://www.semanticweb.org/ngocleltt/ontologies/2025/9/family-task2> rdf:type owl:Ontology ;
    rdfs:label "Family Ontology - Task 2 (ngocleltt)" .

#################################################################
#    Object Properties
#################################################################

###  hasAncestor / ИмеетПредка
:ИмеетПредка rdf:type owl:ObjectProperty ,
                      owl:TransitiveProperty ;
    rdfs:label "hasAncestor" ;
    rdfs:domain :Человек ;
    rdfs:range :Человек .

###  hasDescendant / ИмеетПотомка
:ИмеетПотомка rdf:type owl:ObjectProperty ,
              owl:TransitiveProperty ;
    rdfs:label "hasDescendant" ;
    owl:inverseOf :ИмеетПредка ;
    rdfs:domain :Человек ;
    rdfs:range :Человек .

###  hasParent / ИмеетРодителя
:ИмеетРодителя rdf:type owl:ObjectProperty ,
               owl:FunctionalProperty ,
               owl:IrreflexiveProperty ;
    rdfs:label "hasParent" ;
    rdfs:domain :Человек ;
    rdfs:range :Человек ;
    rdfs:subPropertyOf :ИмеетПредка ;
    owl:inverseOf :ЯвляетсяРодителемДля .

###  isParentOf / ЯвляетсяРодителемДля
:ЯвляетсяРодителемДля rdf:type owl:ObjectProperty ;
    rdfs:label "isParentOf" ;
    rdfs:domain :Человек ;
    rdfs:range :Человек ;
    owl:inverseOf :ИмеетРодителя .


#################################################################
#    Classes
#################################################################

###  Person / Человек
:Человек rdf:type owl:Class ;
    rdfs:label "Person" .


#################################################################
#    Individuals (Example)
#################################################################

:GGParent rdf:type owl:NamedIndividual ,
                   :Человек ;
    rdfs:label "GGParent" .

:GParent rdf:type owl:NamedIndividual ,
                  :Человек ;
         rdfs:label "GParent" ;
         :ИмеетРодителя :GGParent .

:GParent2 rdf:type owl:NamedIndividual ,
                   :Человек ;
          rdfs:label "GParent2" ;
          :ИмеетРодителя :GGParent .

:Parent rdf:type owl:NamedIndividual ,
                 :Человек ;
        rdfs:label "Parent" ;
        :ИмеетРодителя :GParent .

:Parent2 rdf:type owl:NamedIndividual ,
                  :Человек ;
         rdfs:label "Parent2" ;
         :ИмеетРодителя :GParent2 .

:Child rdf:type owl:NamedIndividual ,
                :Человек ;
       rdfs:label "Child" ;
       :ИмеетРодителя :Parent .

:Child2 rdf:type owl:NamedIndividual ,
                 :Человек ;
        rdfs:label "Child2" ;
        :ИмеетРодителя :Parent2 .

:Child3 rdf:type owl:NamedIndividual ,
                 :Человек ;
        rdfs:label "Child3" ;
        :ИмеетРодителя :Parent2 .
